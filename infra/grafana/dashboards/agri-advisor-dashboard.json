{
  "dashboard": {
    "id": null,
    "title": "Agri Advisor Monitoring",
    "tags": ["agri-advisor", "agricultural", "api"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Queries",
        "type": "singlestat",
        "targets": [
          {
            "expr": "agri_advisor_queries_total",
            "format": "time_series",
            "legendFormat": "Total Queries"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 5000}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "agri_advisor_error_rate * 100",
            "format": "time_series",
            "legendFormat": "Error Rate %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Average Response Time",
        "type": "singlestat",
        "targets": [
          {
            "expr": "agri_advisor_response_time_avg",
            "format": "time_series",
            "legendFormat": "Avg Response Time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 2},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "System Health",
        "type": "table",
        "targets": [
          {
            "expr": "agri_advisor_cpu_usage",
            "format": "table",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "agri_advisor_memory_usage", 
            "format": "table",
            "legendFormat": "Memory Usage %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Agent Usage",
        "type": "piechart",
        "targets": [
          {
            "expr": "agri_advisor_agent_usage_weather_agent",
            "legendFormat": "Weather Agent"
          },
          {
            "expr": "agri_advisor_agent_usage_crop_agent",
            "legendFormat": "Crop Agent"
          },
          {
            "expr": "agri_advisor_agent_usage_finance_agent",
            "legendFormat": "Finance Agent"
          },
          {
            "expr": "agri_advisor_agent_usage_policy_agent",
            "legendFormat": "Policy Agent"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Query Volume Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(agri_advisor_queries_total[5m])",
            "legendFormat": "Queries/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Queries per second",
            "min": 0
          }
        ]
      }
    ]
  }
}
